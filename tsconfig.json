{
    "compileOnSave": false,

    "compilerOptions": {
        "rootDir": ".",
        "target": "esnext",

        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "preserve",

        // "allowJs": true,

        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "strict": true,
        "preserveSymlinks": true,
        "noResolve": true,

        "sourceMap": false,
        "declaration": true,

        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
        "skipLibCheck": true,

        "outDir": "lib"
    },

    "exclude": [
        "lib/**/*"
    ]
}