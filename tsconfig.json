{
    "compileOnSave": false,

    "compilerOptions": {
        "target": "esnext",

        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "preserve",

        // "allowJs": true,

        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        // "strict": true,
        "preserveSymlinks": true,

        "sourceMap": false,
        "declaration": true,

        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
        "skipLibCheck": true,

        "types": [
            "jest"
        ],

        "rootDir": ".",
        // "baseUrl": "./packages",
        // "paths": {
        //     "@alvin/*": ["./*/src"]
        // },

        "outDir": "@types"
    },

    "exclude": [
        "lib/**/*",
        "./packages/main-app/**",
        "**/*.test.tsx",
        "**/*.test.ts"
    ]
}