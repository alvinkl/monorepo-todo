{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
        "skipLibCheck": true
    },
    "exclude": [
        "lib/**/*"
    ]
}