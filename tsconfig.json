{
    "compileOnSave": false,

    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",

        "allowJs": false,

        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "preserveSymlinks": true,

        "sourceMap": false,
        "declaration": true,

        "lib": [
            "dom",
            "es2015",
            "es2016"
        ],
        "skipLibCheck": true,


        "typeRoots": [
            "node_modules/@types", "./@types"
        ],
        "types": [
            "jest"
        ],

        "rootDir": ".",

        "outDir": "@types"
    },

    "exclude": [
        "lib/**/*",
        "./packages/main-app/**",
        "**/*.test.tsx",
        "**/*.test.ts",
        "__mock__/"
    ]
}