{
  "name": "monorepo-new-todo",
  "version": "1.0.0",
  "engines": {
    "node": ">=8.1.1",
    "npm": ">=5.4.2",
    "yarn": ">=1.5.1"
  },
  "description": "",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "tslint --project tsconfig.json --config tslint.yaml --exclude '**/*.d.ts'",
    "test": "better-npm-run lint-test",
    "build:babel": "better-npm-run build:packages",
    "build:webpack": "better-npm-run build:packages-webpack",
    "clean": "better-npm-run clean:packages",
    "watch": "better-npm-run build:packages-webpack --watch",
    "build:declaration": "better-npm-run build:typescript-declaration",
    "dev": "better-npm-run clean:packages && better-npm-run watch:development",
    "commit": "git-cz"
  },
  "betterScripts": {
    "build:packages": {
      "env": {
        "BABEL_ENV": "bundles"
      },
      "command": "lerna exec --parallel --ignore @alvin/main-app -- babel src -d lib --config-file ../../.babelrc --extensions \".ts,.tsx,.js,.jsx\""
    },
    "build:packages-webpack": {
      "env": {
        "BABEL_ENV": "bundles"
      },
      "command": "lerna exec --parallel --ignore @alvin/main-app -- webpack --config ../../webpack.base.config.js"
    },
    "build:typescript-declaration": {
      "command": "tsc --emitDeclarationOnly"
    },
    "clean:packages": {
      "command": "rm -rf packages/*/lib packages/*/.next"
    },
    "watch:development": {
      "env": {
        "NODE_ENV": "development"
      },
      "command": "concurrently  \"yarn watch\" \"lerna run --scope @alvin/main-app dev\""
    },
    "lint-test": {
      "env": {
        "NODE_ENV": "test"
      },
      "command": "yarn clean && yarn build:webpack && yarn lint && tsc --noEmit && jest --no-cache"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "better-npm-run lint-test",
      "post-merge": "better-npm-run clean:packages"
    }
  },
  "jest": {
    "rootDir": ".",
    "verbose": true,
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "setupFiles": [
      "./jest.setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules"
    ]
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.1",
    "@babel/core": "^7.0.0-rc.1",
    "@babel/plugin-proposal-class-properties": "^7.0.0-rc.1",
    "@babel/plugin-proposal-decorators": "^7.0.0-rc.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@babel/preset-react": "^7.0.0-rc.1",
    "@babel/preset-typescript": "^7.0.0-rc.1",
    "@types/jest": "^23.3.1",
    "@types/next": "^6.1.2",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "awesome-typescript-loader": "^4",
    "babel-plugin-module-resolver": "^3.1.1",
    "better-npm-run": "^0.1.1",
    "concurrently": "^3.6.1",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "git-cz": "1.7.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.5.0",
    "lerna": "3.0.6",
    "next": "^6.1.1",
    "peer-deps-externals-webpack-plugin": "^1.0.4",
    "prettier": "^1.14.2",
    "react-test-renderer": "^16.4.2",
    "regenerator-runtime": "^0.12.1",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.10.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^18.0.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^3"
  }
}
