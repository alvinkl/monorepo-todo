{
  "name": "monorepo-new-todo",
  "version": "1.0.0",
  "engines": {
    "node": ">=8.1.1",
    "npm": ">=5.4.2",
    "yarn": ">=1.5.1"
  },
  "description": "",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/core/*",
    "packages/features/*"
  ],
  "scripts": {
    "bootstrap": "better-npm-run bootstrap",
    "clean": "rm -rf @types packages/*/*/lib packages/*/*/.next",
    "build:core": "better-npm-run build:core",
    "build:features": "better-npm-run build:features",
    "build:declaration": "better-npm-run build:typescript-declaration",
    "watch:core": "better-npm-run watch:core",
    "watch:features": "better-npm-run watch:features",
    "dev": "better-npm-run clean:packages && better-npm-run dev",
    "dev:main-app": "better-npm-run dev:main-app",
    "dev:storybook": "better-npm-run dev:storybook",
    "lint": "better-npm-run lint",
    "test": "better-npm-run lint-test",
    "commit": "git-cz"
  },
  "betterScripts": {
    "clean:packages": {
      "command": "rm -rf @types packages/*/*/lib packages/*/*/.next"
    },
    "bootstrap": {
      "command": "lerna bootstrap"
    },
    "build:core": {
      "env": {
        "BABEL_ENV": "bundles"
      },
      "command": "lerna run --parallel --stream --scope @organizations/ui --scope @organizations/datasource build"
    },
    "build:features": {
      "env": {
        "BABEL_ENV": "bundles"
      },
      "command": "lerna run --parallel --stream --ignore @organizations/ui --ignore @organizations/datasource --ignore @organizations/main-app build"
    },
    "build:typescript-declaration": {
      "command": "tsc --emitDeclarationOnly"
    },
    "watch:core": {
      "env": {
        "NODE_ENV": "development"
      },
      "command": "lerna run --parallel --stream --scope @organizations/ui --scope @organizations/datasource watch"
    },
    "watch:features": {
      "env": {
        "NODE_ENV": "development"
      },
      "command": "lerna run --parallel --stream --ignore @organizations/main-app --ignore @organizations/ui --ignore @organizations/datasource watch"
    },
    "dev": {
      "env": {
        "NODE_ENV": "development"
      },
      "command": "concurrently \"yarn dev:main-app\" \"yarn dev:storybook\" "
    },
    "dev:main-app": {
      "env": {
        "NODE_ENV": "development"
      },
      "command": "lerna run --stream --scope @organizations/main-app dev"
    },
    "dev:storybook": {
      "env": {
        "NODE_ENV": "development"
      },
      "command": "lerna run --scope @organizations/ui story"
    },
    "lint": {
      "command": "tslint --project tsconfig.json --config tslint.yaml --exclude '**/*.d.ts'"
    },
    "lint-test": {
      "env": {
        "NODE_ENV": "test"
      },
      "command": "yarn clean && yarn build:core && yarn build:features && yarn lint && tsc --noEmit && jest --no-cache"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "better-npm-run lint-test",
      "post-merge": "better-npm-run clean:packages"
    }
  },
  "jest": {
    "rootDir": ".",
    "verbose": true,
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "setupFiles": [
      "./jest.setup.js"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules"
    ]
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.1",
    "@babel/core": "^7.0.0-rc.1",
    "@babel/plugin-proposal-class-properties": "^7.0.0-rc.1",
    "@babel/plugin-proposal-decorators": "^7.0.0-rc.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@babel/preset-react": "^7.0.0-rc.1",
    "@babel/preset-typescript": "^7.0.0-rc.1",
    "@types/jest": "^23.3.1",
    "@types/next": "^6.1.2",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "awesome-typescript-loader": "^4",
    "better-npm-run": "^0.1.1",
    "concurrently": "^3.6.1",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "git-cz": "1.7.1",
    "husky": "^1.0.0-rc.13",
    "isomorphic-style-loader": "^4.0.0",
    "jest": "^23.5.0",
    "lerna": "^3.2.1",
    "peer-deps-externals-webpack-plugin": "^1.0.4",
    "prettier": "^1.14.2",
    "react-test-renderer": "^16.4.2",
    "regenerator-runtime": "^0.12.1",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.10.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^18.0.0",
    "typings-for-css-modules-loader": "^1.7.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^3"
  }
}
