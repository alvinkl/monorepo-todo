{
  "name": "monorepo-new-todo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "eslint --cache --ignore-path .gitignore ./packages/*/src",
    "test": "jest",
    "build:babel": "better-npm-run build:packages",
    "clean": "better-npm-run clean:packages",
    "watch": "better-npm-run build:packages -w",
    "dev": "better-npm-run watch:development"
  },
  "betterScripts": {
    "build:packages": {
      "env": {
        "BABEL_ENV": "bundles"
      },
      "command": "lerna exec --parallel --ignore @alvin/main-app -- babel src --ignore test.jsx -d lib --config-file ../../._babelrc --extensions \".ts,.tsx,.js,.jsx\" --copy-files"
    },
    "clean:packages": {
      "command": "rm -rf packages/*/lib packages/*/.next"
    },
    "watch:development": {
      "env": {
        "NODE_ENV": "development"
      },
      "command": "concurrently \"yarn watch\" \"lerna run --scope @alvin/main-app dev\""
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.1",
    "@babel/core": "^7.0.0-rc.1",
    "@babel/plugin-proposal-class-properties": "^7.0.0-rc.1",
    "@babel/plugin-proposal-decorators": "^7.0.0-rc.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@babel/preset-react": "^7.0.0-rc.1",
    "@babel/preset-typescript": "^7.0.0-rc.1",
    "@types/next": "^6.1.2",
    "@types/react": "^16.4.11",
    "babel-loader": "^7.1.5",
    "babel-plugin-module-resolver": "^3.1.1",
    "better-npm-run": "^0.1.1",
    "concurrently": "^3.6.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^23.5.0",
    "lerna": "^3.0.6",
    "next": "^6.1.1",
    "prettier": "^1.14.2",
    "regenerator-runtime": "^0.12.1",
    "ts-loader": "^4.4.2",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^18.0.0"
  }
}
